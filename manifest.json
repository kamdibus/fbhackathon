{
  "name": "catblocker",
  "version": "1.0",
  "description": "A simple adblocker",
  "permissions": ["storage", "webRequest", "webRequestBlocking", "http://*/", "https://*/"],
  "background": {
	   "scripts": ["background.js"]
  },
  "content_scripts": [{
    "js": ["content.js", 
    	"jquery-3.3.1.min.js", 
    	"kasper_magic.js"],
    "matches": ["<all_urls>"]
  }],
  "browser_action": {
    "default_icon": "Jakesalad.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
